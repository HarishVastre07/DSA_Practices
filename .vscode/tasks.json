{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: Run active file",
            "command": "powershell",
            "args": [
                "-c",
                "cd '${fileDirname}'; g++ -o '${fileBasenameNoExtension}' '${file}'; if ($LASTEXITCODE -eq 0) { ./'${fileBasenameNoExtension}.exe' }"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ],
    "code-runner.runInTerminal": true,
    "code-runner.runInOutputPanel": false,
 
    "version": "2.0.0"
}